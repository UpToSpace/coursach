<UserControl x:Class="MyLove.Views.UserControls.New"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyLove.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <TextBlock 
                    Grid.Row="0"
                    Text="CREATE NEW ERA"
                        FontSize="24"/>
        <Button
            Grid.Row="1" 
            Content="Add Picture"
            Height="Auto"
            Command="{Binding AddPictureEraCommand}"/>
        <TextBlock 
                        Grid.Row="2"
                        VerticalAlignment="Bottom"
                        Margin="0,0,270,0"
                        Text="Name" />
        <TextBox
                        Grid.Row="3"
                        Text="{Binding NewEra.Name, UpdateSourceTrigger=PropertyChanged}"
                        />
        <TextBlock
                        Grid.Row="4"
                        Margin="0,0,270,0"
                        VerticalAlignment="Bottom"
                        Text="Description" />
        <TextBox
                        Grid.Row="5"
                        Text="{Binding NewEra.ShortDescription, UpdateSourceTrigger=PropertyChanged}"
                        />
        <TextBox
                        Grid.Row="6"
                        VerticalContentAlignment="Stretch"
                        TextWrapping="Wrap" 
                        Height="Auto"
            Text="{Binding NewEra.Description, UpdateSourceTrigger=PropertyChanged}"
                        />
        <Button
                        Grid.Row="7" 
                        Content="Add"
                        Command="{Binding AddEraCommand}"/>
    </Grid>
</UserControl>
