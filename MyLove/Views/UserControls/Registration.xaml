<UserControl x:Class="MyLove.Views.UserControls.Registration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyLove.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="{StaticResource Philosopher}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="1"
            FontSize="36"
            VerticalAlignment="Bottom"
            Text="New Account" />
        <TextBlock 
            Grid.Row="2"
            VerticalAlignment="Bottom"
            Margin="0,0,270,0"
            Text="Username" />
        <TextBox
            Grid.Row="3"
            Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
            />
        <TextBlock
            Grid.Row="4"
            Margin="0,0,270,0"
            VerticalAlignment="Bottom"
            Text="Password" />
        <TextBox
            Grid.Row="5"
            Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
            />
        <Button
            Grid.Row="6"
            Content="OK"
            Command="{Binding GoToProfileCommand}"
            />
        <TextBlock
            Grid.Row="7"
            VerticalAlignment="Center"
            Text="or" />
        <Button 
            Grid.Row="8"
            FontSize="24"
            Content="Back to Log In" 
            Command="{Binding GoToLoginPageCommand}"
            />
    </Grid>
</UserControl>
