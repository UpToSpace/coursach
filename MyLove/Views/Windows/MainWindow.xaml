<Window x:Class="MyLove.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:MyLove"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:vm="clr-namespace:MyLove.ViewModels" 
        xmlns:uc="clr-namespace:MyLove.Views.UserControls"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        Style="{DynamicResource MainWindow}"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TabControl 
            Grid.Column="1"
            Grid.Row="1"
            Style="{DynamicResource TabControl}"
            >
            <TabItem 
                Header="Main"
                Style="{DynamicResource TabItem}"
                >
            </TabItem>
            <TabItem 
                Header="Catalog"
                Style="{DynamicResource TabItem}">
                <TabItem.Resources>
                    <DataTemplate DataType="{x:Type vm:CatalogViewModel}">
                        <uc:Catalog />
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:EraViewModel}">
                        <uc:Era />
                    </DataTemplate>
                </TabItem.Resources>

                <ContentControl Content="{Binding CatalogCurrentViewModel}" />
            </TabItem>
            <TabItem 
                Header="About"
                Style="{DynamicResource TabItem}"/>
            
            <TabItem Header="Profile"
                     Style="{DynamicResource TabItem}">
                <TabItem.Resources>
                    <DataTemplate DataType="{x:Type vm:LoginViewModel}">
                        <uc:Login />
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:RegistrationViewModel}">
                        <uc:Registration />
                    </DataTemplate>
                    <!--<DataTemplate DataType="{x:Type vm:RegistrationViewModel}">
                        <uc:Registration />
                    </DataTemplate>-->
                </TabItem.Resources>

                <ContentControl Content="{Binding ProfileCurrentViewModel}" />
            </TabItem>

            <TabItem Header="Settings"
                     Style="{DynamicResource TabItem}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{DynamicResource ChangeThemeLanguage}" />
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{DynamicResource ChangeLanguage}" />
                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                        <Button
                            Width="50"
                            Height="50"
                            Margin="5"
                            Background="#000"
                            Command="{Binding ChangeLanguageCommand}"
                            CommandParameter="EN"/>
                        <Button
                            Width="50"
                            Height="50"
                            Margin="5"
                            Background="#fff"
                            Command="{Binding ChangeLanguageCommand}"
                            CommandParameter="RU"/>
                    </StackPanel>
                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{DynamicResource ChangeTheme}" />
                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                        <Button
                            Width="50"
                            Height="50"
                            Margin="5"
                            Background="#000"
                            Command="{Binding ChangeThemeCommand}"
                            CommandParameter="Dark"/>
                        <Button
                            Width="50"
                            Height="50"
                            Margin="5"
                            Background="#fff"
                            Command="{Binding ChangeThemeCommand}"
                            CommandParameter="Light"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
        </TabControl>
    </Grid>
</Window>
