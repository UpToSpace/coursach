<Window x:Class="MyLove.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:MyLove"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:vm="clr-namespace:MyLove.ViewModels"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        Style="{DynamicResource MainWindow}"
        >
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TabControl 
            Grid.Column="1"
            Grid.Row="1"
            Style="{DynamicResource TabControl}"
            >
            <TabItem 
                Header="Main"
                Style="{DynamicResource TabItem}"
                >
            </TabItem>
            <TabItem 
                Header="Catalog"
                Style="{DynamicResource TabItem}"/>
            <TabItem 
                Header="About"
                Style="{DynamicResource TabItem}"/>
            <TabItem Header="Profile"
                     Style="{DynamicResource TabItem}"/>
            <TabItem Header="Settings"
                     Style="{DynamicResource TabItem}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{DynamicResource ChangeThemeLanguage}" />
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{DynamicResource ChangeLanguage}" />
                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{DynamicResource ChangeTheme}" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
