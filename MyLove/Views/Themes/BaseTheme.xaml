<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="MainWindowBase" TargetType="Window">
        <Setter Property="FontFamily" Value="{StaticResource Philosopher}" />
        <Setter Property="Height" Value="700" />
        <Setter Property="Width" Value="1350" />
        <Setter Property="MinHeight" Value="600" />
        <Setter Property="MinWidth" Value="400" />
        <!--<Setter Property="WindowStyle" Value="None" />-->
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="TabControlBase" TargetType="TabControl">
        <Setter Property="FontFamily" Value="{StaticResource Philosopher}" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style x:Key="ButtonBase" TargetType="Button">
        <Setter Property="Width" Value="196" />
        <Setter Property="Height" Value="64" />
        <Setter Property="FontSize" Value="36" />
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <Style x:Key="TextBoxBase" TargetType="TextBox">
        <Setter Property="Width" Value="340" />
        <Setter Property="Height" Value="38" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="{StaticResource Philosopher}" />
    </Style>
</ResourceDictionary>