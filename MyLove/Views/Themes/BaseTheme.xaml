<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="MainWindowBase" TargetType="Window">
        <Setter Property="Height" Value="700" />
        <Setter Property="Width" Value="1350" />
        <Setter Property="MinHeight" Value="600" />
        <Setter Property="MinWidth" Value="600" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="RadioButtonBase" TargetType="{x:Type RadioButton}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="10, 0" />
    </Style>

    <Style x:Key="ButtonBase" TargetType="Button">
        <Setter Property="Width" Value="196" />
        <Setter Property="Height" Value="64" />
        <Setter Property="FontSize" Value="36" />
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <Style x:Key="TextBoxBase" TargetType="TextBox">
        <Setter Property="Width" Value="340" />
        <Setter Property="Height" Value="38" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>
</ResourceDictionary>