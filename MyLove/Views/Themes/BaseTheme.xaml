<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="MainWindowBase" TargetType="Window">
        <Setter Property="FontFamily" Value="{StaticResource Philosopher}" />
        <Setter Property="Height" Value="700" />
        <Setter Property="Width" Value="1350" />
        <Setter Property="MinHeight" Value="568" />
        <Setter Property="MinWidth" Value="320" />
        <!--<Setter Property="WindowStyle" Value="None" />-->
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="TabControlBase" TargetType="TabControl">
        <Setter Property="FontFamily" Value="{StaticResource Philosopher}" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
</ResourceDictionary>