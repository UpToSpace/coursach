<Application x:Class="MyLove.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyLove">
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="Philosopher">
                ./DesignElements/font/Philosopher-Regular.ttf #Philosopher
            </FontFamily>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Views/Themes/BaseTheme.xaml" />
                <ResourceDictionary Source="./Views/Themes/DarkTheme.xaml" />
                <ResourceDictionary Source="./Views/Languages/En.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
